  <link rel="stylesheet" href="css/routine.css" type="text/css">
</head>
<h1>Hi <%= user.name %></h1>
<% if (sets == null || sets.length == 0) {%>
  <h3>No Sets</h3>
<%} else {%>
  <form class="" action="editroutine" method="post">
    <label for="create">Edit</label>
    <input type="text" id="create" name="create" value="<%= routine.name %>" required>
  <input type="hidden" name="routine" value="<%= routine.id %>">

